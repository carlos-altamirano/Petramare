<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext.xml</param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <!-- Filtro para codificaciÃ³n de caracteres en formato UTF-8 -->
    <filter>
        <filter-name>UTF8Filter</filter-name>
        <filter-class>Common.UTF8Filter</filter-class>
        <init-param>
            <param-name>requestEncoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>UTF8Filter</filter-name>
        <!--<url-pattern>/*</url-pattern>-->
        <url-pattern>/ControllerUpload</url-pattern>
        <url-pattern>/ControllerCapture</url-pattern>
        <url-pattern>/Saldo</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>controlador</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>ControllerUpload</servlet-name>
        <servlet-class>servlets.ControllerUpload</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerCapture</servlet-name>
        <servlet-class>servlets.ControllerCapture</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Saldo</servlet-name>
        <servlet-class>servlets.Saldo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>muestraPDF</servlet-name>
        <servlet-class>servlets.muestraPDF</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>controlador</servlet-name>
        <url-pattern>*.htm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerUpload</servlet-name>
        <url-pattern>/ControllerUpload</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerCapture</servlet-name>
        <url-pattern>/ControllerCapture</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Saldo</servlet-name>
        <url-pattern>/Saldo.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>muestraPDF</servlet-name>
        <url-pattern>/muestraPDF.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>15</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>redirect.jsp</welcome-file>
    </welcome-file-list>
</web-app>
